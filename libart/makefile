#------------------------------------------------------------------------------#
#								   GENERAL									   #
#------------------------------------------------------------------------------#
NAME = libart.a

CC = gcc
CFLAGS = -Wall -Werror -Wextra
RM = rm -rf
AR = ar rcs

#------------------------------------------------------------------------------#
#									SOURCES									   #
#------------------------------------------------------------------------------#
HEADER = includes/libart.h
D_SRC = src/
D_OBJ = obj/
OBJS = $(patsubst $(D_SRC)%.c,$(D_OBJ)%.o,$(SRCS))
SRCS = \
		src/art_colors.c \
		src/art_colors2.c \
		src/art_intro_mini.c \
		src/art_exit_mini.c

#------------------------------------------------------------------------------#
#									 RULES									   #
#------------------------------------------------------------------------------#
all:	$(NAME)

$(NAME): $(OBJS)
	@$(call archiving, $(AR) $@ $(OBJS))
	@echo "$(LGREEN)LIBART completed !$(NC)"

$(OBJS) : $(D_OBJ)%.o : $(D_SRC)%.c $(HEADER)
	@mkdir -p $(D_OBJ)
	@$(call run_and_test, $(CC) $(CFLAGS) -c $< -o $@)

intro_daftpunk:
	@printf "\n \
			${LGRAY}             ‚ñÑ‚ñÑ‚ñÑ‚ñÑ${DGRAY}‚ñÑ‚ñÑ‚ñÑ‚ñÑ‚ñÑ\n \
