bonus: all
	@printf " \n \
		    ${NC} ‚ïî‚ïê‚ïê  $(LCYAN)  ‚ïê‚ïê  $(LRED) ‚ïî   ‚ï¶ $(LYELLOW) ‚ï¶  ‚ï¶ $(LMAGENTA) ‚ïî‚ïê‚ïê‚ïó \n \
		    ${NC} ‚ïë  ‚ïë $(LCYAN) ‚ïë  ‚ïë $(LRED) ‚ïë\  ‚ïë $(LYELLOW) ‚ïë  ‚ïë $(LMAGENTA) ‚ïë   \n \
		    ${NC} ‚ï†‚ïê‚ïê  $(LCYAN) ‚ïë  ‚ïë $(LRED) ‚ïë \ ‚ïë $(LYELLOW) ‚ïë  ‚ïë $(LMAGENTA) ‚ïö‚ïê‚ïê‚ïó\n \
		    ${NC} ‚ïë  ‚ïë $(LCYAN) ‚ïë  ‚ïë $(LRED) ‚ïë  \‚ïë $(LYELLOW) ‚ïë  ‚ïë $(LMAGENTA)    ‚ïë\n \
		    ${NC} ‚ïö‚ïê‚ïê  $(LCYAN)  ‚ïê‚ïê  $(LRED) ‚ï©   ‚ïù $(LYELLOW)  ‚ïê‚ïê  $(LMAGENTA) ‚ïö‚ïê‚ïê‚ïù\n \
		    ${NC}_______________________________\n \
		\n"

clean:
	@$(call cleaning, $(RM) $(D_OBJ));

fclean: clean
	@$(call fcleaning, $(RM) $(NAME))

re: fclean all

.PHONY: all clean fclean re

#------------------------------------------------------------------------------#
#								  MAKEUP RULES								   #
#------------------------------------------------------------------------------#

#----------------------------------- SOURCE -----------------------------------#

#----------------------------------- INTROS -----------------------------------#

#----------------------------------- COLORS -----------------------------------#
LRED= \033[91m
RED= \033[31m
LGREEN= \033[92m
YELLOW= \033[33m
LYELLOW= \033[93m
LMAGENTA= \033[95m
LCYAN= \033[96m
LGRAY= \033[37m
DGRAY= \033[90m
BLACK= \033[30m
NC= \033[0;39m

#----------------------------------- TEXTES -----------------------------------#
OK_STRING = "[OK]"
ERROR_STRING = "[ERROR]"
WARN_STRING = "[WARNING]"
COMP_STRING = "Generating"
CLEAN_STRING = "Cleaning"
ARCH_STRING = "Archiving"

#----------------------------------- DEFINE -----------------------------------#
define run_and_test
printf "$(LRED)‚ñ†$(NC)"; \
$(1) 2> $@.log; \
RESULT=$$?; \
	if [ $$RESULT -ne 0 ]; then \
		printf "%-60b%b" "$(LCYAN)$(COMP_STRING)$(LMAGENTA) $(@F)" "üí•$(NC)\n"; \
	elif [ -s $@.log ]; then \
			printf "%-60b%b" "$(LCYAN)$(COMP_STRING)$(LMAGENTA) $(@F)" "‚ö†Ô∏è$(NC)\n"; \
	fi; \
	cat $@.log; \
	rm -f $@.log; \
	exit $$RESULT
endef

define cleaning
printf "%b" "$(LCYAN)$(CLEAN_STRING)$(LMAGENTA) LIBART Objects Files & Directories$(NC)\r"; \
$(1) 2> $@.log; \
RESULT=$$?; \
	if [ $$RESULT -ne 0 ]; then \
		printf "%-60b%b" "$(LCYAN)$(CLEAN_STRING)$(LMAGENTA) LIBART Objects Files & Directories" "üí•$(NC)\n"; \
	elif [ -s $@.log ]; then \
		printf "%-60b%b" "$(LCYAN)$(CLEAN_STRING)$(LMAGENTA) LIBART Objects Files & Directories" "‚ö†Ô∏è$(NC)\n"; \
	else \
		printf "%-60b%b" "$(LCYAN)$(CLEAN_STRING)$(LMAGENTA) LIBART Objects Files & Directories" "‚úÖ$(NC)\n"; \
	fi; \
	cat $@.log; \
	rm -f $@.log; \
	exit $$RESULT
endef

define fcleaning
printf "%b" "$(LCYAN)$(CLEAN_STRING)$(LMAGENTA) LIBART Executable Files$(NC)\r"; \
$(1) 2> $@.log; \
RESULT=$$?; \
	if [ $$RESULT -ne 0 ]; then \
		printf "%-60b%b" "$(LCYAN)$(CLEAN_STRING)$(LMAGENTA) LIBART Executable Files" "üí•$(NC)\n"; \
	elif [ -s $@.log ]; then \
		printf "%-60b%b" "$(LCYAN)$(CLEAN_STRING)$(LMAGENTA) LIBART Executable Filess" "‚ö†Ô∏è$(NC)\n"; \
	else \
		printf "%-60b%b" "$(LCYAN)$(CLEAN_STRING)$(LMAGENTA) LIBART Executable Files" "‚úÖ$(NC)\n"; \
	fi; \
	cat $@.log; \
	rm -f $@.log; \
	exit $$RESULT
endef

define archiving
printf "%b" "\n$(LCYAN)$(ARCH_STRING)$(LMAGENTA) $(@F)$(NC)\r"; \
$(1) 2> $@.log; \
RESULT=$$?; \
	if [ $$RESULT -ne 0 ]; then \
		printf "%-60b%b" "$(LCYAN)$(ARCH_STRING)$(LMAGENTA) $(@F)" "üí•$(NC)\n"; \
	elif [ -s $@.log ]; then \
		printf "%-60b%b" "$(LCYAN)$(ARCH_STRING)$(LMAGENTA) $(@F)" "‚ö†Ô∏è$(NC)\n"; \
	else \
		printf "%-60b%b" "$(LCYAN)$(ARCH_STRING)$(LMAGENTA) $(@F)" "‚úÖ$(NC)\n"; \
	fi; \
	cat $@.log; \
	rm -f $@.log; \
	exit $$RESULT
endef


.PHONY: all